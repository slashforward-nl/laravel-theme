{
    "name": "slashforward-nl/laravel-theme",
    "description": "Laravel 5 Themes: Asset & Views folder per theme. Theme inheritance. Blade integration and more...",
    "keywords": ["themes", "views", "assets", "blade", "laravel", "package"],
    "license": "MIT",
    "homepage": "https://github.com/slashforward-nl/laravel-theme.git",
    "authors": [
        {
            "name": "Wouter Neuteboom",
            "email": "w.neuteboom@slashforward.nl"
        }
    ],	
    "require": {
        "illuminate/contracts": "5.4.* || 5.5.* || 5.6.* || 5.7.* || 5.8.* || ^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0"
    },
    "suggest": {
        "orchestra/asset" : "Use '@css' and '@js' in Blade files"
    },
    "autoload": {
        "psr-4" : {
            "Slashforward\\LaravelTheme\\"        : "src/",
            "Slashforward\\LaravelTheme\\Tests\\" : "tests/"            
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Slashforward\\LaravelTheme\\ThemeServiceProvider"
            ],
            "aliases": {
                "Theme": "Slashforward\\LaravelTheme\\Facades\\Theme"
            }
        }
    },
    "minimum-stability": "stable"
}
